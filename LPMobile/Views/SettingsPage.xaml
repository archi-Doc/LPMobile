<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Arc="clr-namespace:Arc.Views"
             x:Class="LPMobile.Views.SettingsPage"
             Disappearing="ContentPage_Disappearing"
             Shell.NavBarIsVisible="False">
    <!--Hide Navigation Bar-->
    <VerticalStackLayout>

        <Entry Text="{Binding TestStringValue}" MaximumWidthRequest="200"/>
        
        <Label
            x:Name="LicenseLabel">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="XAML中で" />
                    <Span Text="色を付けたり" TextColor="Red" />
                    <Span Text="できます。" />
                    <Arc:HyperlinkSpan Text="here------"
                                         Url="https://docs.microsoft.com/dotnet/" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

    </VerticalStackLayout>
</ContentPage>
